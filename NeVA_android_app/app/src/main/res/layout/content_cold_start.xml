<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context="mealrecommender.neva.com.neva_android_app.ColdStartActivity"
  tools:showIn="@layout/activity_cold_start"
  android:id="@+id/cold_start_content">

  <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mealrecommender.neva.com.neva_android_app.RecommendFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme">

    <android.support.constraint.ConstraintLayout
      android:id="@+id/Constraint"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <ProgressBar
        android:id="@+id/cold_start_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:max="30"
        android:progress="0"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

      <LinearLayout
        android:id="@+id/cold_start_linear_layout"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/Constraint"
        app:layout_constraintStart_toStartOf="@+id/Constraint"
        app:layout_constraintTop_toTopOf="@+id/Constraint">
        <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          app:cardBackgroundColor="@color/oppositeColor"
          app:cardCornerRadius="0dp"
          app:cardElevation="3dp"
          app:layout_constraintBottom_toBottomOf="@+id/cold_start_linear_layout"
          app:layout_constraintTop_toTopOf="@+id/cold_start_linear_layout">
          <TextView
            android:id="@+id/cold_start_recommendation_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/latoregular"
            android:gravity="center"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/textAlternativeColor"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintLeft_toLeftOf="@+id/cold_start_linear_layout"
            app:layout_constraintRight_toRightOf="@+id/cold_start_linear_layout"/>
        </android.support.v7.widget.CardView>

      </LinearLayout>
      <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/cold_start_flexbox_layout"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:alignItems="flex_start"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:layout_constraintBottom_toTopOf="@+id/cold_start_button_linear_layout2"
        app:layout_constraintTop_toBottomOf="@+id/cold_start_linear_layout"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

      </com.google.android.flexbox.FlexboxLayout>

      <LinearLayout
        android:id="@+id/cold_start_button_linear_layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cold_start_linear_layout">
        <Button
          android:id="@+id/cold_start_dislike_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:background="@drawable/rounded_button"
          android:onClick="dislikeButtonClick"
          android:text="Dislike"
          android:textColor="@color/textSecondaryColor"/>
        <Button
          android:id="@+id/cold_start_like_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:background="@drawable/rounded_button"
          android:onClick="likeButtonClick"
          android:text="Like"
          android:textColor="@color/textSecondaryColor"/>
      </LinearLayout>

      <Button
        android:id="@+id/cold_start_skip_button"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:onClick="skipButtonClick"
        android:text="SKIP >"
        android:textColor="@color/textSecondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cold_start_button_linear_layout2"/>

    </android.support.constraint.ConstraintLayout>
  </FrameLayout>


</android.support.constraint.ConstraintLayout>
