<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:theme="@style/AppTheme"
  tools:context="mealrecommender.neva.com.neva_android_app.ProposeFragment">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.TextInputLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:fontFamily="@font/latoregular"
        android:text=""
        android:textSize="18sp"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

      <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
          android:id="@+id/fragment_proposal_field"
          android:layout_width="250sp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:ems="10"
          android:fontFamily="@font/latoregular"
          android:hint="@string/meal_name"
          android:textAlignment="center"
          android:textSize="24sp"
          android:layout_marginRight="12dp"/>
      </android.support.design.widget.TextInputLayout>

      <Button
        android:id="@+id/fragment_proposal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/latoregular"
        android:text="@string/propose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/textSecondaryColor"
        tools:layout_editor_absoluteY="245dp"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

      <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
          android:id="@+id/fragment_tag_proposal_field"
          android:layout_width="250sp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:ems="10"
          android:fontFamily="@font/latoregular"
          android:hint="@string/tag_name"
          android:textAlignment="center"
          android:textSize="24sp"
          android:layout_marginRight="12dp"/>
      </android.support.design.widget.TextInputLayout>

      <Button
        android:id="@+id/fragment_tag_proposal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/latoregular"
        android:text="@string/propose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/textSecondaryColor"
        tools:layout_editor_absoluteY="245dp"/>

    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:fontFamily="@font/latoregular"
      android:text="@string/specific_tag_description"
      android:textSize="18sp"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingTop="10sp"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <AutoCompleteTextView
            android:id="@+id/fragment_proposal_meal_for_tag"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:fontFamily="@font/latoregular"
            android:hint="@string/meal_name"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginRight="12dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <AutoCompleteTextView
            android:id="@+id/fragment_proposal_tag_of_meal"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:fontFamily="@font/latoregular"
            android:hint="@string/tag_name"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginRight="12dp"/>
        </android.support.design.widget.TextInputLayout>

      </LinearLayout>

      <Button
        android:id="@+id/fragment_proposal_tag_for_meal_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/latoregular"
        android:text="@string/propose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/textSecondaryColor"
        tools:layout_editor_absoluteY="245dp"/>
    </LinearLayout>
  </LinearLayout>
  </ScrollView>

</FrameLayout>
